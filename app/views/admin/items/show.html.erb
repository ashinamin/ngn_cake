<div class="container">
    <div class="row">
        <span style="background-color: rgb(220, 220, 220);"><h4>商品詳細</h4></span>
    </div>
    <div class="row">
        <div class="col-4">
            <%= image_tag @item.item_image, size: '80x50' %>
        </div>
        <table class="table table-borderless">
            <div class="col-6">
                <tr>
                    <td>商品名</td>
                    <td><%= @item.name %></td>
                </tr>
                <tr>
                    <td>商品説明</td>
                    <td><%= @item.introduction %></td>
                </tr>
                <tr>
                    <td>ジャンル</td>
                    <td><%= @item.genre %></td>
                </tr>
                <tr>
                    <td>税込価格<br>(税抜価格)</td>
                    <td><%= @item.add_tax_sales_price.to_s(:dalimited) %>(<%= @item.price %>)円</td>
                </tr>
                <tr>
                    <td>販売ステータス</td>
                    <td><%= @item.is_activ, class: "text-success" %></td>
                </tr>
                    <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
                </tr>
            </div>
        </table>    
        <div class="col-2"></div>
    </div>
</div>
