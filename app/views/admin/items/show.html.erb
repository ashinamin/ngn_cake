<div class="container mt-4 mb-4">
    <div class="row">
        <div class='col-lg-1'></div>
            <h4><span style="background-color: rgb(220, 220, 220);">商品詳細</span></h4>
    </div>
    <div class="row">
        <div class="col-lg-4">
            <%= image_tag @item.get_item_image(250,250) %>
        </div>
        <div class="col-lg-6">
            <table class="table table-borderless">
                <tr>
                    <th>商品名</th>
                    <td><%= @item.name %></td>
                </tr>
                <tr>
                    <th>商品説明</th>
                    <td><%= @item.introduction %></td>
                </tr>
                <tr>
                    <th>ジャンル</th>
                    <td><%= @item.genre_id %></td>
                </tr>
                <tr>
                    <th>税込価格<br>(税抜価格)</th>
                    <td><%= @item.add_tax_price.to_s(:dalimited) %>(<%= @item.price %>)円</td>
                </tr>
                <tr>
                    <th>販売ステータス</th>
                    <td>
                        <% if @item.is_active %>
                          <p class="text-success"><strong>販売中</strong></p>
                        <% else %>
                          <p class="text-black-50"><strong>販売停止中</strong></p>
                        <% end %>
                    </td>
                </tr>
            </table>
            <div class="row">
                <div class="col-lg-3"></div>
                <div class="col-lg-6">
                    <%= link_to '編集する', edit_admin_item_path(@item), class: "btn btn-sm btn-success" %>
                </div>
                <div class="col-lg-3"></div>
            </div>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>