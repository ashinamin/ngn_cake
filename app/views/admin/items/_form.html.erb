<table class="table table-borderless">
  <%= form_with model: item, url: '/items', method: :post do |f| %>
    <tr>
      <th>商品画像</th>
      <td><%= f.file_field :item_image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th>商品名</th>
      <td><%= f.text_field :name, placeholder: "商品名" %></td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%= f.text_area :introduction, rows: '5', placeholder: "ここに説明文を記述します" %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= f.collection_select :genre, Genre.all, :id, :name, include_blank: "-- 選択してください --" %></td>
    </tr>
    <tr>
      <th>税抜価格</th>
      <td><%= f.text_field :price, placeholder: "1000" %>円</td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td><%= f.radio_button :is_activ, "for sale" %>販売中　<%= f.radio_button :is_activ, "sales stop" %>販売停止</td>
    </tr>
    <tr>
      <td></td>
      <td><%= f.submit submit_label, class: "btn btn-success" %></td>
    </tr>
  <% end %>
</table>