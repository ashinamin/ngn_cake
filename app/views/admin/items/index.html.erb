<div class="container">
  <br>
    <div class="row">
      <div class="col-1"></div>
      <div class="col-3">
        <span style="background-color: rgb(220, 220, 220);"><h4>商品一覧</h4></span>
      </div>
      <div class="col-6"></div>
      <div class="col-1">
        <%= link_to "＋", new_admin_item_path, class: "btn btn-warning rounded-circle p-1", style: "width:2rem;height:2rem;" %>
      </div>
      <div class="col-1"></div>
    </div>
  <br>  
    <div class="row">
        <div class="col-1"></div>
        <div class="col-10">
          <table class='table table-striped'>
            <thead>
              <tr>
                <th>商品ID</th>
                <th>商品名</th>
                <th>税抜価格</th>
                <th>ジャンル</th>
                <th colspan="5"></th>
                <th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
              <tr>
                <td><%= item.item_id %></td>
                <td><%= item.item_name %></td>
                <td><%= item.item_price %></td>
                <td><%= item.item_genre %></td>
                <td><%= item.item_is_activ %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="col-1"></div>
    </div>
</div>