<h4>商品一覧</h4>
<table class='table table-striped'>
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th colspan="5"></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.item_id %></td>
      <td><%= item.item_name %></td>
      <td><%= item.item_price %></td>
      <td><%= item.item_genre %></td>
      <td><%= item.item_is_activ %></td>
    </tr>
    <% end %>
  </tbody>
</table>
