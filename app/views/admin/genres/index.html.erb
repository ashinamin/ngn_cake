<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">ジャンル一覧・追加</span></h4>
  </div>

<div class="my-5">
<%= form_with model:@genre, url: admin_genres_path, method: :post do |f| %>

<%= f.label :"ジャンル名" %>
<%= f.text_field :name %>
<%= f.submit '新規登録', class: "btn btn-success" %>

<% end %>
</div>

<div class="row">
  <div class="col-4">
<table class="table table-striped">
  <thead>
    <tr>
      <th>
      ジャンル
      </th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td class="h-1"><%= genre.name %>
      <div class="text-right"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>
</div>