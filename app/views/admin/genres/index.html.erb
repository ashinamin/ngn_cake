<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">ジャンル一覧・追加</span></h4>
  </div>

<div class="my-4">
<%= form_with model:@genre, url: admin_genres_path, method: :post do |f| %>
<div class="row">
<div class="col-2"><%= f.label :"ジャンル名" %></div>
<div class="col-3"><%= f.text_field :name %></div>
<div class="col-2"><%= f.submit '新規登録', class: "btn btn-success" %></div>
</div>
<% end %>
</div>

<div class="row">
  <div class="col-4">
<table class="table">
  <thead>
    <tr class="bg-light">
      <th>
      ジャンル
      </th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.name %></td>
      <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
</div>