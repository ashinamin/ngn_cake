<div class="containar">
  <div class="row">

    <h4><%= @customer.full_name %>さんの会員情報編集</h4>

    <% form_with model: [:admin, @customer] do |f| %>
      <table>
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= f.text_field :last_name %></td>
          <td><%= f.text_field :first_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= f.text_field :last_neme_kana %></td>
          <td><%= f.text_field :first_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= f.text_field :postal_code %></td>
          <td></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= f.text_field :address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= f.text_field :telephone_number %></td>
          <td></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= f.text_field :email %></td>
          <td></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td>
            <%= f.radio_button :is_active, :true %>
            <%= f.label :is_active, "有効", {value: :true} %>

            <%= f.radio_button :is_active, :false %>
            <%= f.label :is_active, "退会", {value: :false} %>
          </td>
        </tr>

        <tr>
          <th></th>
          <td><%= f.submit "変更を保存", class:"btn btn-success" %></td>
        </tr>
      </table>
    <% end %>

  </div>
</div>