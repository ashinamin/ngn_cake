<div class="container mt-4 mb-4">
  <div class="row">
    <div class="col-lg-1"></div>
      <h4><span style="background-color: rgb(220, 220, 220);"><%= @customer.full_name %>さんの会員詳細</span></h4>
  </div>

  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-10">
      <table>
        <tr>
          <th style="width: 40%">会員ID</th>
          </div>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>氏名</th>
          <td><%= @customer.full_name %></td>
        </tr>

        <tr>
          <th>フリガナ</th>
          <td><%= @customer.full_name_kana %></td>
        </tr>

        <tr>
          <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>

        <tr>
          <th>電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
          <td>
            <% if @customer.is_active %>
              <p class="text-success"><strong>有効</strong></p>
            <% else %>
              <p class="text-black-50"><strong>退会</strong></p>
            <% end %>
          </td>
        </tr>

        <tr>
          <th></th>
          <td><%= link_to"編集する", edit_admin_customer_path(@customer), class: "btn btn-success" %> </td>
          <td><%= link_to"注文履歴一覧を見る",admin_path ,class: "btn btn-primary" %></td>

        </tr>
      </table>
    </div>
    </div>
  </div>
</div>
