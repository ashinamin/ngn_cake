<div class="container mt-4 mb-4">
  <dic class="row">
    <div class="col">

        <h4>会員一覧</h4>

      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
          <tbody>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td><%= customer.customer_status %></td>
            </tr>
          </tbody>
        <% end %>
      </table>

      <%= paginate @customers %>
    </div>
  </div>
</div>
