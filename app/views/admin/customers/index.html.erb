<div class="container mt-4 mb-4">
  <dic class="row">
    <div class= 'col-lg-1'></div>
    <div class="col-lg-3">
        <h4><span style="background-color: rgb(220, 220, 220);">会員一覧</span></h4>
    </div>
    <div class="col-lg-8"></div>
  </div>
    
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-9">
      <table class="table">
        <thead style="background-color: rgb(220, 220, 220);">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
          <tbody bgcolor="#ffffff">
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.full_name, admin_customer_path(customer.id) %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_active %>
                  <p class="text-success"><strong>有効</strong></p>
                <% else %>
                  <p class="text-black-50"><strong>退会</strong></p>
                <% end %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>
  
      <div class="row">
        <div class="col-lg-4"></div>
        <div class="col-lg-4">
          <%= paginate @customers %>
        </div>
        <div class="col-lg-4"></div>
      </div>
    </div>
    <div class="col-lg-1"></div>
  </div>
</div>
