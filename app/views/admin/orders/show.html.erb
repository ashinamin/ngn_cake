<div class="container">
  <div class="row">
    <h4>注文履歴詳細</h4>
  </div>
  
  <div class="row">
    <table>
      <tr>
        <th>購入者</th>
        <td><%= @order.customer.full_name %></td>
      </tr>
      
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      
      <tr>
        <th>配送先</th>
        <td><%= @order.address %></td>
      </tr>
      <tr>
        <th></th>
        <td><%= @customer.name %></td>
      </tr>
      
      <tr>
        <th>支払方法</th>
        <td><%= @customer.payment_method %></td>
      </tr>
      
      <tr>
        <th>注文ステータス</th>
        <td><%= </td>
        <td><%= f.submit "更新", class: 'btn btn-primary' %></td>
      </tr>
    </table>
    
    <table>
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価（税込）</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
          <th></th>
        </tr>
      </thead>
      <% @order_details.each do |order_detail| %>
      <tbody>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= (order_detail.price.floor*1.1).to_s(:delimited) %></td>
          <td><%= order_detail.amount %></td>
          <td><%= ((order_detail.price * order_detail.amount*1.1).floor).to_s(:delimited) %></td>
          <td><%=  %></td>
          <td><%= f.submit "更新", class: 'btn btn-primary' %></td>
        </tr>
      </tbody>
    </table>
    <p>
      <strong>商品合計</strong>
      <%= @order.total_payment - @order.shipping_cost).to_s(:delimited) %>円
    </p>
    <p>
      <strong>送料</strong>
      <%= @order.shipping_cost %>円
    </p>
    <p>
      <strong>請求金額合計</strong>
      <%= @order.total_payment.to_s(:delimited) %>円
    </p>
    
  </div>
</div>