<div class='container mt-4'>

  <div class='row'>
    <div class='col-lg-1'></div>
      <h4><span style="background-color: rgb(220, 220, 220);">ログイン</span></h4>
  </div>
  <div class='row'>
    <div class='col-lg-1'></div>
      <h6><span style="background-color: rgb(220, 220, 220);">会員の方はこちらからログイン</span></h6>
  </div>

  <div class='row'>
    <div class='col-lg-3'>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
      </div>
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>
      </br>
      <div class="actions">
        <%= f.submit "ログイン" ,class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>

</br>
</br>
