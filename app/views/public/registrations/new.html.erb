<div class='container mt-4'>

  <div class='row'>
    <div class='col-lg-1'></div>
      <h4><span style="background-color: rgb(220, 220, 220);">&emsp;新規会員登録&emsp;</span></h4>
    </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
<div class='row'>
  <div class="col-10">
<table>

  <tr>
  <div class="field">
    <td style="width: 30%">名前</td>
    <td style="width: 10%"><%= f.label :last_name, '(姓)' %></td>
    <td style="width: 20%"><%= f.text_field :last_name %></td>
    <td style="width: 10%"><%= f.label :first_name, '(名)' %></td>
    <td style="width: 20%"><%= f.text_field :first_name %></td>
    <!--<td style="width: 40%"></td>-->
  </div>
  </tr>

  <tr>
  <div class="field">
    <td>フリガナ</td>
    <td><%= f.label :last_name_kana, '(セイ)' %></td>
    <td><%= f.text_field :last_name_kana %></td>
    <td><%= f.label :first_name_kana, '(メイ)' %></td>
    <td><%= f.text_field :first_name_kana %></td>
  </div>
  </tr>

  <tr>
　<div class="field">
　  <td>メールアドレス</td>
　  <td></td>
    <td><%= f.email_field :email %></td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td>郵便番号(ハイフンなし)</td>
    <td></td>
    <td><%= f.text_field :postal_code %></td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td>住所</td>
    <td></td>
    <td colspan="2"><%= f.text_field :address, size: 50 %></td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td>電話番号(ハイフンなし)</td>
    <td></td>
    <td><%= f.text_field :telephone_number %></td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td>パスワード(6文字以上)</td>
    <!--<% if @minimum_password_length %>-->
    <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
    <!--<% end %><br />-->
    <td></td>
    <td><%= f.password_field :password %></td>
  </div>
  </tr>

  <tr>
  <div class="field">
    <td>パスワード確認用</td>
    <td></td>
    <td><%= f.password_field :password_confirmation %></td>
  </div>
  </tr>

  <tr>
  <div class="actions">
    <td></td>
    <td></td>
    <td><%= f.submit "新規登録", class: "btn btn-success" %></td>
  </div>
  </tr>
</table>
</div>
</div>
<% end %>

</br>
<div class='row'>
      <h4><span style="background-color: rgb(220, 220, 220);">&emsp;既に登録済みの方&emsp;</span></h4>
    </div>
</br>
<div class="row mb-3">
  <div class="col-1"></div>
<%= render "public/shared/links" %>からログインしてください。
</div>
</div>