<%= form_with model: @address, url: '/addresses', method: :post do |f| %>
<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">配送先登録/一覧</span></h4>
  </div>
  <div class="row mt-4">
    <div class='col-lg-8'>
    <table>
      <tr>
        <td>郵便番号(ハイフンなし)</td>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td>住所</td>
        <td><%= f.text_field :address, size:50 %></td>
      </tr>
      <tr>
        <td>宛名</td>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit "新規登録", class: "btn btn-sm btn-success" %></td>
      </tr>
    </table>
    </div>
  </div>
<% end %>
  <div class='row mt-4'>
    <div class='col-lg-10'>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th class="bg-light">郵便番号</th>
          <th class="bg-light">住所</th>
          <th class="bg-light">宛名</th>
          <th class="bg-light"></th>
        </tr>
      </thead>
<% @addresses.each do |address| %>
      <tbody>
        <tr>
          <td style="width:10%"><%= address.postal_code %></td>
          <td style="width:50%"><%= address.address %></td>
          <td style="width:10%"><%= address.name %></td>
          <td style="width:20%"><%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success" %>
          <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に解除しますか？", class: "btn btn-sm btn-danger", remote: true %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
  </div>
</div>