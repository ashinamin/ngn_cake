<%= form_with model: @address, url: update_address_path(@address.id), method: :post do |f| %>
<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">配送先編集</span></h4>
  </div>
  <div class="row mt-4">
    <table>
      <tr>
        <th></th>
        <th></th>
      </tr>
      <tr>
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th>宛名</th>
        <td><%= f.text_field :name %></td>
        <td><%= f.submit class: 'btn btn-success' %>変更内容を保存</td>
      </tr>
    </table>
  </div>
<% end %>
</div>
