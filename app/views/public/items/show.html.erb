<div class="container mt-4 mb-4">
    <div class="row"></div>
    <div class="row">
      <div class='col-lg-3'>
        <%= render 'genre', genres: @genres %>
      </div>
      <div class="col-lg-4">
        <%= image_tag @item.get_item_image(250,250) %>
      </div>
      <div class="col-lg-5">
        <h4><strong><%= @item.name %></strong></h4><br>
        <p><%= @item.introduction %></p><br>
          <strong>¥<%= number_with_delimiter(@item.add_tax_price, delimiter: ',') %></strong>(税込)<br><br>
          <% if customer_signed_in? %>
            <% if @item.is_active %>
              <%= form_with model: @cart_item, url: cart_items_path, method: :post do |f| %>
                <%= f.hidden_field :customer_id, value: current_customer.id %>
                <%= f.hidden_field :item_id, value: @item.id %>
                <%= f.select :amount, *[1..10, include_blank: "個数選択"] %>
                <%= f.submit "カートに入れる", class: "btn btn-success" %>
              <% end %>
            <% else %>
                <strong class="text-danger">販売停止中</strong>
            <% end %>  
          <% end %>
      </div>
    </div>
</div>