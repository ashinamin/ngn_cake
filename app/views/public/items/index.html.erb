<div class="container mt-4 mb-4">
    <!--<div class="row"></div>-->
    <div class="row">
      <div class='col-lg-3'>
      <p>ジャンル検索が入ります</p>
      </div>
      <div class='col-lg-9'>
        <h4><strong>商品一覧</strong>(全<%= @items.count %>件)</h4>
        <div class="row">
          <% @items.each do |item| %>
              <div class="col-lg-3">
                <%= link_to public_item_path(item) do %>
                  <%= image_tag item.get_item_image(130,130) %><br>
                  <%= item.name %><br>
                  ¥<%= item.price.to_s(:dalimited) %>
                <% end %>
              </div>
          <% end %>
        </div>
        <div class="row">
          <div class="col-lg-5"></div>
          <div class="col-lg-4">
            <%= paginate @items %>
          </div>
          <div class="col-lg-3"></div>
        </div>
      </div>
    </div>
</div>