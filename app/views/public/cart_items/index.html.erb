<div class="container mt-4 mb-4">
    <div class="row">
      <div class='col-lg-1'></div>
      <div class="col-lg-3">
        <h4><span style="background-color: rgb(220, 220, 220);">ショッピングカート</span></h4>
      </div>
      <div class="col-lg-6"></div>
      <div class="col-lg-1">
        <%= link_to "カートを空にする", cart_items_destroy_all_path, class: "btn btn-danger" %>
      </div>
      <div class="col-lg-1"></div>
    </div>
    <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-10">
          <table class='table table-striped'>
            <thead>
              <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小径</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @cart_items.each do |cart_item| %>
                <td><%= cart_item.item.add_tax_price %></td>
              <% end %>
            </tbody>
          </table>
        <div class="row">
          <div class="col-lg-3">
            
            
            
            <%= link_to "買い物を続ける", _path, class: "btn btn-primary"%>
            
            
            
          </div>
          <div class="col-lg-5"></div>
          <div class="col-lg-4">
            <table class="table table-borderless">
              <tr>
                <th>合計金額</th>
                <td><%= f.file_field :item_image, accept: "image/*" %></td>
              </tr>
            </table>
          </div>
        </div>
        </div>
        <div class="col-lg-1"></div>
    </div>
</div>