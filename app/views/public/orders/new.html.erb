
<%= form_with model: @order, url: 'public_orders_path', method: :post, local: true do |f| %>
<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">注文情報入力</span></h4>
  </div>
  <div class='row'>
    <table>
      <thead>
        <tr>
          <th><h5><b>支払方法</b></h5></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="col-lg-2">
            <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card], value: Order.payment_methods.key(0) %></br>

            <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
            <%= f.label :payment_method, Order.payment_methods_i18n[:transfer], value: Order.payment_methods.key(1) %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
 
  <div class='row'>
    <table>
      <thead>
        <tr>
          <th><h5><b>お届け先</b></h5></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td class="col-lg-2">
            <%= f.radio_button :address_option, 0, checked: "checked" %>
            <%= f.label :order_address, "ご自身の住所" %>
          </br>
            〒<%= current_customer.post_code %>
              <%= current_customer.address %></br>
              <%= current_customer.last_name %><%= current_costomer.first_name %>
            
            <%= f.radio_button :address_option, 1 %>
            <%= f.label :order_address, "登録済住所から選択" %>
          </br>
              <%= f.collection_select :customer_id, @addresses, :id, :full_adresses %> 
          </td>
            <%= f.radio_button :address_option, 2 %>
            <%= f.label :order_address, "新しいお届け先" %>
          <tr>
            <td><%= f.label :customer_postal_code, "郵便番号(ハイフンなし)" %></td>
            <td><%= f.text_field :customer_postal_code %></td>
          </tr>
          <tr>
            <td><%= f.label :customer_address, "住所" %></td>
            <td><%= f.text_fiels :customer_address %></td>
          </tr>
          <tr>
            <td><%= f.label :customer_name, "宛名" %></td>
            <td><%= f.text_field :customer_name %></td>
          </tr>
        </tr>
      </tbody>
    </table>
  </div>
  <%= f.submit "確認画面へ進む" %>
</div>
<% end %>
