<%= form_with model: @order, url: orders_confirm_path, method: :post, local: true do |f| %>
<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">注文情報入力</span></h4>
  </div>
    <div class='row'>
      <div>
          <h5><b>支払方法</b></h5>
            <p class="ml-4"><%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
              <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card], value: Order.payment_methods.key(0) %>
            </br>
              <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
              <%= f.label :payment_method, Order.payment_methods_i18n[:transfer], value: Order.payment_methods.key(1) %>
            </p>
            
          <h5><b>お届け先</b></h5>
          <div class="ml-4">
            <%= f.radio_button :address_option, 0, checked: "checked" %>
            <%= f.label :order_address, "ご自身の住所" %>
          </br>
            〒<%= current_customer.postal_code %>
              <%= current_customer.address %>
          </br>
            <%= current_customer.last_name %>
            <%= current_customer.first_name %>
          </br>
            <%= f.radio_button :address_option, 1 %>
            <%= f.label :order_address, "登録済住所から選択" %>
          </br>
          <style>
            .box select{
              width: 1000px;
            }
          </style>
          <div class="box select">
            <%= f.collection_select(:customer_id, current_customer.addresses.all, :id, :address) %>
          </div>
          </br>
            <%= f.radio_button :address_option, 2 %>
            <%= f.label :order_address, "新しいお届け先" %>
          <table>
            <tr>
              <td class='col-3'><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
              <td class='col-9'><%= f.text_field :postal_code, size:50 %></td>
            </tr>
            <tr>
              <td class='col-3'><%= f.label :address, "住所" %></td>
              <td class='col-9'><%= f.text_field :address, size: 100 %></td>
            </tr>
            <tr>
              <td class='col-3'><%= f.label :name, "宛名" %></td>
              <td class='col-9'><%= f.text_field :name, size: 50 %></td>
            </tr>
          </table>
          </div>
            <div class="row justify-content-center py-5">
               <%= f.submit "確認画面へ進む", class:"btn btn-primary" %>
            </div>
      </div>
    </div>
  <% end %>
</div>