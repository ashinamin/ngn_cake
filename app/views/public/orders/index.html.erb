<%= form_with model: @order, url: 'orders_show_path', method: :post, local: true do |f| %>
<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">注文履歴一覧</span></h4>
  </div>
  <table>
    <thead>
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody>
<% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.postal_code %></br>
            <%= order.address %></td>
        <td><%= order.items.name %></td>
        <td><% subtotal = ((order_derails.price*cart_items.quantity)*1.08).to_i %>
          <%= subtotal %>
        </td>
        <td><%= order.status %></td>
        <td><%= link_to "表示する", orders_path(order.id), class: "btn btn-sm btn-success" %></td>
      </tr>
<% end %>
    </tbody>
  </table>
</div>
<% end %>