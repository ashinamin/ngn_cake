<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">注文履歴一覧</span></h4>
  </div>
  <table class="table table-bordered">
    <thead>
      <tr>
        <td class="bg-light", style="width:10%">注文日</td>
        <td class="bg-light", style="width:50%">配送先</td>
        <td class="bg-light", style="width:10%">注文商品</td>
        <td class="bg-light", style="width:10%">支払金額</td>
        <td class="bg-light", style="width:10%">ステータス</td>
        <td class="bg-light", style="width:10%">注文詳細</td>
      </tr>
    </thead>
    <tbody>
<% @orders.each do |order| %>
      <tr>
        <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
        <td><%= order.postal_code %></br>
            <%= order.address %></br>
            <%= order.customer.last_name %><%= order.customer.first_name %>
        </td>
        <td><% order.order_details.each do |order_detail| %>
            <%= order_detail.item.name %>
            <% end %>
        </td>
        <td><%= order.payment_method_i18n %></td>
        <td><%= order.status_i18n %></td>
        <td><%= link_to "表示する", order_path(order.id), class: "btn btn-sm btn-primary" %></td>
      </tr>
  <% end %>
    </tbody>
  </table>
</div>
