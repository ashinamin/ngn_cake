
<div class='container mt-4'>
  <div class='row'>
    <div class='col-lg-1'></div>
  <h4><span style="background-color: rgb(220, 220, 220);">注文履歴詳細</span></h4>
  </div>
    <div class="row">
      <div class="col-7">
        <b>注文情報</b>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td class="bg-light", style="width:20%">注文日</td>
                <td style="width:80%"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
              </tr>
              <tr>
                <td class="bg-light">配送先</td>
                <td>
                  <%= @order.postal_code %>
                  <%= @order.address %>
                  <%= @order.name %>
                </td>
              </tr>
              <tr>
                <td class="bg-light">支払方法</td>
                <td><%= @order.payment_method_i18n %></td>
              </tr>
              <tr>
                <td class="bg-light">注文ステータス</td>
                <td><%= @order.status_i18n %></td>
              </tr>
            </tbody>
          </table>
        </div>
      <div class="col-4">
        <b>請求情報</b>
          <table class="table table-bordered">
            <tbody>
              <tr>
                <td class="bg-light">商品合計</td>
                <td>¥<%= (@order.total_payment - @order.shipping_cost).to_s(:delimited) %></td>
              </tr>
              <tr>
                <td class="bg-light">配送料</td>
                <td>¥<%= @order.shipping_cost %></td>
              </tr>
              <tr>
                <th class="bg-light">ご請求額</th>
                <td>¥<%= "#{@order.total_payment.to_s(:delimited)}"%></td>
              </tr>
            </tbody>
          </table>
      </div>
    </div>
</div>
  
  <div class="container mt-5">
    <div class="row">
  <div class="col-9">
    <b>注文内容</b>
    <table class="table table-bordered">
      <thead>
        <tr>
          <td class="bg-light">商品</td>
          <td class="bg-light">単価（税込）</td>
          <td class="bg-light">個数</td>
          <td class="bg-light">小計</td>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td>¥<%= (order_detail.price * 1.1).floor.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td>¥<%= (order_detail.price * order_detail.amount * 1.1).floor.to_s(:delimited) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>
</div>