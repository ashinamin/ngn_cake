<div class='container mt-5'>

  <div class='row'>
    <div class='col-lg-2'></div>
      <h4><span style="background-color: rgb(220, 220, 220);">&emsp;マイページ&emsp;</span></h4>
  </div>
  </br>
      <div class="d-flex align-items-center">
        <h5><b>登録情報&emsp;</b></h5>
        <%= link_to "編集する", customers_information_edit_path, class: "btn btn-success"%>
      </div>

      <br>

      <div class='row'>
        <div class='col-8'>
      <table class="table table-bordered" >
        <tr>
          <th class="bg-light col-2">氏名</th>
          <td class="col-5"><%= @customer.last_name %> <%= @customer.first_name %></td>
        </tr>

        <tr>
          <th class="bg-light col-2">カナ</th>
          <td class="col-5"><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
        </tr>

        <tr>
          <th class="bg-light col-2">郵便番号</th>
          <td class="col-5"><%= @customer.postal_code %></td>
        </tr>

        <tr>
          <th class="bg-light col-2">住所</th>
          <td class="col-5"><%= @customer.address %></td>
        </tr>

        <tr>
          <th class="bg-light col-2">電話番号</th>
          <td class="col-5"><%= @customer.telephone_number %></td>
        </tr>

        <tr>
          <th class="bg-light col-2">メールアドレス</th>
          <td class="col-5"><%= @customer.email %></td>
        </tr>
      </table>
      </div>
      <div class='col-4'></div>
      </div>

      <table>
        <tr>
        <div class="d-flex align-items-center">
          <th><h5><b>配送先</b></h5></th>
          <td><%= link_to "一覧を見る", addresses_path, class:"btn btn-primary ml-3" %></td>
        </div>
        </tr>
        <tr>
        <div class="d-flex align-items-center">
          <th><h5><b>注文履歴</b></h5></th>
          <td><%= link_to "一覧を見る", orders_path, class:"btn btn-primary ml-3" %></td>
        </div>
        </tr>
      </table>
      <br>
      <br>
    </div>
  </div>
</div>