<header class="border-bottom border-dark bg-light">
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand" href="/"><%= image_tag('naganocake.png') %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">

        <% if admin_signed_in? %>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to admin_items_path,class: 'nav-link text-dark' do %>
              商品一覧
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to admin_customers_path,class: 'nav-link text-dark' do %>
              会員一覧
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to admin_path,class: 'nav-link text-dark' do %>
              注文履歴一覧
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%=  link_to admin_genres_path ,class: 'nav-link text-dark' do %>
              ジャンル一覧
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to destroy_admin_session_path, method: :delete,class: 'nav-link text-dark' do %>
              ログアウト
            <% end %>
          </li>

        <% elsif customer_signed_in? %>
        <div class="mt-3 mr-5 text-dark">ようこそ、<%= current_customer.last_name %>さん!</div>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to customers_my_page_path,class: 'nav-link text-dark' do %>
              マイページ
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to items_path,class: 'nav-link text-dark' do %>
              商品一覧
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to cart_items_path,class: 'nav-link text-dark' do %>
              カート
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to destroy_customer_session_path, method: :delete,class: 'nav-link text-dark' do %>
              ログアウト
            <% end %>
          </li>

        <% else %>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to about_path,class: 'nav-link text-dark' do %>
              About
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to items_path ,class: 'nav-link text-dark' do %>
              商品一覧
            <% end %>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to new_customer_registration_path,class: 'nav-link text-dark' do %>
              新規登録
            <% end %>
          </li>
          <li type="button" class="btn btn-outline-secondary m-2">
            <%= link_to new_customer_session_path ,class: 'nav-link text-dark' do %>
              ログイン
            <% end %>
          </li>
        <% end %>
        </ul>
      </div>
    </div>
    <div class="search_form pb-2 mr-5">
      <%= form_with url: search_path, local: true, method: :get do |f| %>
        <%= f.text_field :word %>
      <% end %>
    </div>
  </nav>
</header>